---
interface Gif {
  src: string;
  alt: string;
  width: number;
  height: number;
}

interface Props {
  gifs: Gif[];
}

const { gifs } = Astro.props;
---

<div class="flex flex-col md:flex-row gap-5">
  {gifs.map((gif) => (
    <img
      src={gif.src}
      alt={gif.alt}
      width={gif.width}
      height={gif.height}
      class="w-full md:w-auto"
    />
  ))}
</div>
