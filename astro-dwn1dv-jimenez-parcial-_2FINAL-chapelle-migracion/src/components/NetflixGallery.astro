---
import type { NetflixSpecial } from '../data/netflix-specials';

interface Props {
  specials: NetflixSpecial[];
}

const { specials } = Astro.props;
---

<div class="especiales-netflix">
  {specials.map((special) => (
    <a href={special.url} target="_blank" rel="noopener noreferrer" class="netflix-link">
      <img
        src={special.image}
        alt={`Dave presentando ${special.title}`}
        width="300"
        height="418"
        class="netflix-image"
      />
    </a>
  ))}
</div>

<style>
  .especiales-netflix {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .netflix-link {
    position: relative;
    flex: 1 1 100%;
    padding-top: 1em;
  }

  @media (min-width: 768px) {
    .netflix-link {
      flex: 1 1 calc(50% - 1rem);
    }
  }

  @media (min-width: 1024px) {
    .netflix-link {
      flex: 1 1 calc(25% - 1rem);
    }
  }

  .netflix-image {
    width: 100%;
    border-radius: 5px;
  }

  .netflix-image:hover {
    outline: solid 2px #8cb4ff;
  }

  .netflix-link::before {
    position: absolute;
    content: "";
    display: block;
    background-image: url("/imagenes/icono_click_black.png");
    background-size: 100%;
    background-repeat: no-repeat;
    width: 20px;
    height: 20px;
    bottom: 8px;
    right: 45px;
  }

  .netflix-link:hover::before {
    display: none;
  }
</style>
