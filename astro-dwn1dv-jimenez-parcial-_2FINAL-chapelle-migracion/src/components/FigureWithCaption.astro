---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  width: number;
  height: number;
  caption: string;
  captionLang?: string;
}

const { src, alt, width, height, caption, captionLang } = Astro.props;
---

<figure>
  <Image src={src} alt={alt} width={width} height={height} format="webp" loading="lazy" />
  <figcaption lang={captionLang}>{caption}</figcaption>
</figure>

<style>
  figure {
    display: block;
    border-radius: 10px;
    overflow: hidden;
  }

  figure > img {
    border-radius: 0px;
    width: 100%;
  }

  figcaption {
    text-align: center;
    text-shadow: 2px 1px 2px black;
    color: white;
    background-color: #ff0213;
    margin: 0px;
    border: none;
  }
</style>
